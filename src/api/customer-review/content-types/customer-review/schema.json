{
  "kind": "collectionType",
  "collectionName": "customer-reviews",
  "info": {
    "singularName": "customer-review",
    "pluralName": "customer-reviews",
    "displayName": "Customer Review"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "reviewerName": {
      "type": "string",
      "required": true
    },
    "reviewContent": {
      "type": "text",
      "required": true
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "customerReviews"
    }
  }
}
